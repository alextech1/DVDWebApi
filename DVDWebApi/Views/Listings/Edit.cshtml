@model DVDWebApi.UI.Models.DvdEditViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Edit DVD</h2>
        @using (Html.BeginForm("Edit", "Listings", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmEditListing" }))
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(x => x.Dvd.DvdId)
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    <label>Title</label>
                    @Html.TextBoxFor(x => x.Dvd.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>ReleaseYear</label>
                    @Html.TextBoxFor(x => x.Dvd.ReleaseYear, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Director</label>
                    @Html.TextBoxFor(x => x.Dvd.Director, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Rating</label>
                    @Html.TextBoxFor(x => x.Dvd.Rating, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Notes</label>
                    @Html.TextBoxFor(x => x.Dvd.Notes, new { @class = "form-control" })
                </div>

                <button class="btn btn-primary">Save</button>
            </div>
            <div class="col-sm-12 col-md-6">
                <img src="@Url.Content("~/Images/" + Model.Dvd.ImageFileName)" />                
            </div>
        }
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('frmEditListing').validate({
                rules: {
                    'Title': {
                        required: true
                    },
                    'ReleaseYear': {
                        required: true,
                        number: true
                    },
                    'Director': {
                        required: true
                    },
                    'Rating': {
                        requried: true
                    },
                    'Notes': {
                        required: true
                    }
                }
            });
        });

    </script>    
}



