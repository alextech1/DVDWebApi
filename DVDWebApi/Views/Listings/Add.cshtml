@model DVDWebApi.Models.Dvd

@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4">
        <h2>Add Dvd</h2>
        @using (Html.BeginForm("Add", "Listings", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddListing" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Title</label>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Release Year</label>
                @Html.TextBoxFor(x => x.ReleaseYear, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Director</label>
                @Html.TextBoxFor(x => x.Director, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Rating</label>
                @Html.TextBoxFor(x => x.Rating, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Notes</label>
                @Html.TextBoxFor(x => x.Notes, new { @class = "form-control" })
            </div>
            <button class="btn btn-primary">Add</button>
        }
    </div>
</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            $('#frmAddListing').validate({
                rules: {
                    'Title': {
                        required: true
                    },
                    'ReleaseYear': {
                        required: true,
                        number: true,
                    },
                    'Director': {
                        required: true
                    },
                    'Rating': {
                        required: true
                    },
                    'Notes': {
                        required: true
                    }
                }
            })
        })

    </script>
}
